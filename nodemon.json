{

  "ext": "js, jsx,  json, html",

  "watch": [
    "/modules/*",
    "/plugins/*",
    "/models/*",
    "/routes/*"
  ],

  "ignore": [
    "/_hbs/*",
    "/_js/*",
    "/_scss/*",
    "/node_modules/*",
    "/public/*",
    "_config.js",
    "gulpfile.js",
    "package.json",
    "webpack.config.js"
  ],

  "events": {
    "start": "eslint */ --ignore-pattern _js/"
  }

}
